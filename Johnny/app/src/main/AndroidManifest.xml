<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hedge.johnny" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".Activity.InitialActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.AlarmActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.FriendActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.SettingActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.AddAlarmActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.AddFriendActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.DeleteFriendActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.TimeoutActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.WeatherQuizActivity" android:label="@string/app_name"/>

    </application>

</manifest>
