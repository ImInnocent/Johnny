<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tx_AmPm"
        android:text="오전"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_AlarmTime"
        android:text="9:00"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Mon"
        android:text="월"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Tue"
        android:text="화"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Wed"
        android:text="수"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Thu"
        android:text="목"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Fri"
        android:text="금"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Sat"
        android:text="토"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_Sun"
        android:text="일"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:gravity="right">

        <ImageButton
            android:id="@+id/btn_modify"
            android:src="@drawable/friend_modify"
            android:background="#00ffffff"
            android:onClick="btnClickAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_del"
            android:src="@drawable/friend_del"
            android:background="#00ffffff"
            android:paddingLeft="15dp"
            android:onClick="btnClickAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>